@using System.Text.Json
@using CZ.Worker.EmailSender.TemplateDomain.ServiceBus
@using CZ.Worker.EmailSender.TemplateDomain.TemplateDataPayloads

@{ ProfileData data = JsonSerializer.Deserialize<ProfileData>(Model.Content.Data); }

<row>
    <columns>
        <spacer size="16"></spacer>

        <p class="text-center">
            Hi @data.FullName
        </p>

        <spacer size="16"></spacer>

        <p class="text-center">
            Please click on the link below to reset your password.
        </p>

        <spacer size="16"></spacer>

        <center>
            <button href="https://cezeta1.github.io" class="button-primary">Reset Password</button>
        </center>

        <spacer size="16"></spacer>
        
        <p class="text-center">
            If you did not want to reset your password, please disregard this email.
        </p>
    </columns>
</row>

<spacer size="8"></spacer>

@await Html.PartialAsync($"./Shared/NeedHelp/en-NeedHelp.cshtml")

