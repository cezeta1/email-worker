@using CZ.Worker.EmailSender.TemplateDomain.ServiceBus

@model QueueEmailMessage

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
  
    <head>
        <link rel="stylesheet" type="text/css" href="main.css" />
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <meta name="viewport" content="width=device-width">
    </head>

    <body>

        <spacer size="16"></spacer>

        <container class="body-drip">

            @await Html.PartialAsync($"./_Header.cshtml") 

            <wrapper class="main-content">
                <row>
                    <columns>
                        @await Html.PartialAsync($"{@ViewBag.Content}", Model)
                    </columns>
                </row>
            </wrapper>

            <row class="collapsed">
                @await Html.PartialAsync($"./_Footer.cshtml")
            </row>
        </container>

        <!-- prevent Gmail on iOS font size manipulation -->
        <div style="display:none; white-space:nowrap; font:15px courier; line-height:0;"> 
            &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; 
        </div>
    </body>
</html>
